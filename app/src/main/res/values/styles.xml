<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>

    <style name="buttonResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_span">7</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonGoResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_span">1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="textResultLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_span">5</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textResultRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_span">3</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tableRowResultOther">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <style name="tableRowResultFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="tableLayoutResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tableViewInputData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="tableRowInputData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textViewInputName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_span">3</item>
    </style>

    <style name="editTextDataInTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_span">3</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="linearLayouteMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearLayoutInputData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textViewKleaningInfoProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">13dp</item>
    </style>

    <style name="textViewKleaningInfoProductHead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
