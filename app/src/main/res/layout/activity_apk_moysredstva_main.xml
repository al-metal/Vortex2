            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp">

                <ImageButton
                    android:id="@+id/imageButton11"

                    android:onClick="onClickRaschetMoySredstvForHoz"
