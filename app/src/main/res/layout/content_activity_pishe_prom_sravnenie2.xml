<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.ActivityPishePromSravnenie2"
    tools:showIn="@layout/app_bar_activity_pishe_prom_sravnenie2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:inputType="text"
                        android:text="@string/tvNazvanie" />

                    <EditText
                        android:id="@+id/etSredstvo"
                        style="@style/editTextInputData"
                        android:inputType="text" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvPlotnostKg_L" />

                    <EditText
                        android:id="@+id/etPlotnost"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvStoimostRub_Kg" />

                    <EditText
                        android:id="@+id/etPrice"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKoncentraciyaRastvora_procent" />

                    <EditText
                        android:id="@+id/etKoncentratRastvor"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvObjemMoyushegoRastvoraL" />

                    <EditText
                        android:id="@+id/etObjemRastvor"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKolichestvoPromyvokSutki" />

                    <EditText
                        android:id="@+id/etOperacSutki"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKolichestvoRabochihDneyMes" />

                    <EditText
                        android:id="@+id/etDay"
                        style="@style/editTextInputData" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                style="@style/buttonResult"
                android:onClick="onClick"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableRaschet"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView style="@style/textViewLongResultLeft" />

                    <TextView
                        android:id="@+id/tvSredstvoVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvSredstvo"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvCenaZa1LRub" />

                    <TextView
                        android:id="@+id/tvPriceLitrVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvPriceLitr"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimostRastvoraRub" />

                    <TextView
                        android:id="@+id/tvStoimostRastvoraVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvStoimostRastvora"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvRashodSredstvaZa1MoykuL" />

                    <TextView
                        android:id="@+id/tvRashodSrdstvaMoykaVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvRashodSrdstvaMoyka"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvRashodSredstvaVMesyacL" />

                    <TextView
                        android:id="@+id/tvRashodSredstvaMesVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvRashodSredstvaMes"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvRashodNaPokupkuSredstvaMesyacRub" />

                    <TextView
                        android:id="@+id/tvPriceSredstvaVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvPriceSredstva"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvEfektivnostPrimeneniyaSredstvVortexRub" />

                    <TextView
                        android:id="@+id/tvVygoda"
                        style="@style/textViewLongResultMiddle" />

                    <TextView style="@style/textViewLongResultRight" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
