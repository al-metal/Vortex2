<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayouteMain"
    tools:context=".Fragments.KliningCalculation7Fragment">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputDataFrag"
                        android:text="Цена за весь объем в таре,руб." />

                    <EditText
                        android:id="@+id/etPricePerVolume"
                        style="@style/editTextInputDataFrag" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputDataFrag"
                        android:text="Количество монодоз" />

                    <EditText
                        android:id="@+id/etNumberOfMonodoses"
                        style="@style/editTextInputDataFrag" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputDataFrag"
                        android:text="Вместимость жироуловителя, м3" />

                    <EditText
                        android:id="@+id/etCapacityOfTheGreaseTrap"
                        style="@style/editTextInputDataFrag" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnCalculation"
                style="@style/buttonResultFrag"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Расход на 1 м3 жироуловителя, монодоза" />

                    <TextView
                        android:id="@+id/tvExpense"
                        style="@style/textViewResultRightFrag"
                        android:text="2" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Стоимость 1 монодозы, руб." />

                    <TextView
                        android:id="@+id/tvThePrice"
                        style="@style/textViewResultRightFrag" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Стоимость 1-го применения, руб" />

                    <TextView
                        android:id="@+id/tvCostOfApplication"
                        style="@style/textViewResultRightFrag" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>