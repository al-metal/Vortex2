<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.ActivityAPKKopytaProfilaktika2"
    tools:showIn="@layout/app_bar_activity_apkkopyta_profilaktika2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        android:id="@+id/textView68"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_span="5"
                        android:text="@string/tvObjemVanny"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textView192"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:text="@string/tv200"
                        android:textSize="17sp" />

                    <ImageButton
                        android:id="@+id/imageButton18"
                        style="@style/buttonInfo"
                        android:onClick="onClickVanna"
                        app:srcCompat="@mipmap/btninfo" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKolichestvoDoynogoStada" />

                    <EditText
                        android:id="@+id/etStado"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        android:id="@+id/textView75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_span="5"
                        android:text="@string/tvProdoljitelnostDni" />

                    <EditText
                        android:id="@+id/etPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17dp"
                        android:layout_span="2"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <ImageButton
                        android:id="@+id/imageButton20"
                        style="@style/buttonInfo"
                        android:onClick="onClickObrabotka"
                        app:srcCompat="@mipmap/btninfo" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvDesimix_Procent" />

                    <EditText
                        android:id="@+id/etDesimix"
                        style="@style/editTextInputData" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                style="@style/buttonResult"
                android:onClick="onClickRaschet"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvKolichestvoObrabotokSht" />

                    <TextView
                        android:id="@+id/tvTrebuemObrabot"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableLayoutResult">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvKolichestvoTrebuemyhVannSht" />

                    <TextView
                        android:id="@+id/tvTrebuemVann"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableLayoutResult">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvDesemixKg" />

                    <TextView
                        android:id="@+id/tvVsegoDesimix"
                        style="@style/textViewResultRight" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
