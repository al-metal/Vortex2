<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.ActivityAPKGigienaVymeniPosleDoeniaSravnenie2"
    tools:showIn="@layout/app_bar_activity_apkgigiena_vymeni_posle_doenia_sravnenie2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvNazvanieSredstva" />

                    <EditText
                        android:id="@+id/etSredstvo"
                        style="@style/editTextInputData"
                        android:inputType="text" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvRashodNaOdnuGolovuGramm" />

                    <EditText
                        android:id="@+id/etRashodGolova"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvCenaRUB" />

                    <EditText
                        android:id="@+id/etPrice"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvVesKG" />

                    <EditText
                        android:id="@+id/etVes"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKOlichestvoGolovSHT" />

                    <EditText
                        android:id="@+id/etKolichGolov"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvPeriodObrabotkiDni" />

                    <EditText
                        android:id="@+id/etPeriod"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKolichestvoObrabotokDen" />

                    <EditText
                        android:id="@+id/etObrabotokVDen"
                        style="@style/editTextInputData" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                style="@style/buttonResult"
                android:onClick="onClickRaschet"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView style="@style/textViewLongResultLeft" />

                    <TextView
                        android:id="@+id/tvSredstvoVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvSredstvo"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimost1KGRUB" />

                    <TextView
                        android:id="@+id/tvStoimostKgVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvStoimostKg"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvKolichestvoGigieny" />

                    <TextView
                        android:id="@+id/tvKolichGigienVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvKolichGigien"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimostOdnoyObrabotki" />

                    <TextView
                        android:id="@+id/tvObrabotkiVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvObrabotki"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimostObrabotkiPogolovyaRub" />

                    <TextView
                        android:id="@+id/tvObrabotkiVsegoVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvObrabotkiVsego"
                        style="@style/textViewLongResultRight" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
