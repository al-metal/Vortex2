<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.ActivityAPKGigienaVymeniPosleDoenia2"
    tools:showIn="@layout/app_bar_activity_apkgigiena_vymeni_posle_doenia2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRow">

                    <Spinner
                        android:id="@+id/spinner4"
                        style="@style/spinerInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvRashodNaOdnuGolovuGramm" />

                    <TextView
                        android:id="@+id/tvRashodGolova"
                        style="@style/editTextInputData" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvCenaRUB" />

                    <EditText
                        android:id="@+id/etPrice"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvVesKG" />

                    <EditText
                        android:id="@+id/etVes"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKOlichestvoGolovSHT" />

                    <EditText
                        android:id="@+id/etKolichGolov"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvPeriodObrabotkiDni" />

                    <EditText
                        android:id="@+id/etPeriodObrabotki"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKolichestvoObrabotokDen" />

                    <EditText
                        android:id="@+id/etKolichVDen"
                        style="@style/editTextInputData" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                style="@style/buttonResult"
                android:onClick="onClick"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimost1KGRUB" />

                    <TextView
                        android:id="@+id/tvStoimostKg"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvKolichestvoGigieny" />

                    <TextView
                        android:id="@+id/tvKolichGigien"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimostOdnoyObrabotki" />

                    <TextView
                        android:id="@+id/tvStoimObrabotki"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimostObrabotkiPogolovyaRub" />

                    <TextView
                        android:id="@+id/tvStoimObrabotkiVsego"
                        style="@style/textViewResultRight" />
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/btnCompare"
                style="@style/buttonCompare"
                android:onClick="onClickSravnenie"
                android:text="@string/btnSrav" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
