<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.Main2Activity"
    tools:showIn="@layout/app_bar_main2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowResultFirst">

                    <ImageButton
                        android:id="@+id/imageButton"
                        style="@style/imageButtonMainActivity"
                        android:onClick="onClick"
                        app:srcCompat="@drawable/vortex" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        style="@style/imageButtonMainActivity"
                        android:onClick="onClickPisheProm"
                        app:srcCompat="@drawable/tank" />

                </TableRow>

                <TableRow style="@style/tableRowResultFirst">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        style="@style/imageButtonMainActivity"
                        android:onClick="onClickAuto"
                        app:srcCompat="@drawable/complex" />

                    <ImageButton
                        android:id="@+id/imageButton8"
                        style="@style/imageButtonMainActivity"
                        android:onClick="onClickKlining"
                        app:srcCompat="@drawable/cleanbox" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
