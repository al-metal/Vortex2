<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.ApkMoySredstvaActivity2"
    tools:showIn="@layout/app_bar_apk_moy_sredstva2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRow">

                    <Spinner
                        android:id="@+id/spinner"
                        style="@style/spinerInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvStoimost" />

                    <EditText
                        android:id="@+id/etStoim"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvVesKG" />

                    <EditText
                        android:id="@+id/etVes"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKoncentraciyaProcent" />

                    <EditText
                        android:id="@+id/etKoncentrat"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvObjemVannaL" />

                    <EditText
                        android:id="@+id/etVanna"
                        style="@style/editTextInputData" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                style="@style/buttonResult"
                android:onClick="onClickBtn"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvPlotnostSredstvaKg_L" />

                    <TextView
                        android:id="@+id/tvPlotnost"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableLayoutResult">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimost1Kg_rub" />

                    <TextView
                        android:id="@+id/tvStoimKg"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableLayoutResult">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimost1L_Rub" />

                    <TextView
                        android:id="@+id/tvStoimL"
                        style="@style/textViewResultRight" />
                </TableRow>

                <TableRow style="@style/tableLayoutResult">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimost1PromyvkiRub" />

                    <TextView
                        android:id="@+id/tvStoimPromiv"
                        style="@style/textViewResultRight" />

                </TableRow>

                <TableRow style="@style/tableLayoutResult">

                    <TextView
                        style="@style/textViewResultLeft"
                        android:text="@string/tvStoimostPromyvochnoysmesi" />

                    <TextView
                        android:id="@+id/tvStoimLitrSmes"
                        style="@style/textViewResultRight" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/sravnenie"
                style="@style/buttonCompare"
                android:onClick="onClickBtnSravnenie"
                android:text="@string/btnSrav" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
