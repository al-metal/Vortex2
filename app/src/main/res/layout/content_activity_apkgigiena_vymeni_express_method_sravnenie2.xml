<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.ActivityAPKGigienaVymeniExpressMethodSravnenie2"
    tools:showIn="@layout/app_bar_activity_apkgigiena_vymeni_express_method_sravnenie2">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvNazvanieSredstva" />

                    <EditText
                        android:id="@+id/etSredstvo"
                        style="@style/editTextInputData"
                        android:inputType="text" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvCenaUpakovkiRub" />

                    <EditText
                        android:id="@+id/etPrice"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvVesUpakovkiKG" />

                    <EditText
                        android:id="@+id/etVes"
                        style="@style/editTextInputData" />
                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputData"
                        android:text="@string/tvKolichestvoGolovSht" />

                    <EditText
                        android:id="@+id/etKolichGolov"
                        style="@style/editTextInputData" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                style="@style/buttonResult"
                android:onClick="onClick"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView style="@style/textViewLongResultLeft" />

                    <TextView
                        android:id="@+id/tvVortex"
                        style="@style/textViewLongResultMiddle"
                        android:text="@string/tvSomatest" />

                    <TextView
                        android:id="@+id/tvSravnenie"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        android:id="@+id/tvApkMoySredstvaSravPlotnost"
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimost1KGRUB" />

                    <TextView
                        android:id="@+id/tvStoimKg"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvStoimKgVortex"
                        style="@style/textViewLongResultRight" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        android:id="@+id/tvApkMoySredstvaSravSoimostKg"
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvNeobhodimoeKolichestvoKg" />

                    <TextView
                        android:id="@+id/tvKolichSredstvaVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvKolichSredstva"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        android:id="@+id/tvApkMoySredstvaSravSoimostL"
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimostObrabotkiGolovyRub" />

                    <TextView
                        android:id="@+id/tvStoimostVsegoVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvStoimostVsego"
                        style="@style/textViewLongResultRight" />
                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        android:id="@+id/tvApkMoySredstvaSravStoimostPromiv"
                        style="@style/textViewLongResultLeft"
                        android:text="@string/tvStoimostObrabotkiObshayaRub" />

                    <TextView
                        android:id="@+id/tvStoimostGolovyVortex"
                        style="@style/textViewLongResultMiddle" />

                    <TextView
                        android:id="@+id/tvStoimostGolovy"
                        style="@style/textViewLongResultRight" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
