<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APK.GigienaVymeni.ActivityAPKGigienaVymeniExpressMethod">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Somatest"
                android:enabled="false"/>

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Цена упаковки, руб"
                android:inputType="number" />

            <EditText
                android:id="@+id/etVes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Вес упаковки, кг"
                android:inputType="number" />

            <EditText
                android:id="@+id/etKolichGolov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Кол-во исследуемых голов, шт"
                android:inputType="number" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="0,1"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:layout_span="9"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="Стоимость 1 кг, руб: " />

                    <TextView
                        android:id="@+id/tvStoimKg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="8"
                        android:text="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="Кол-во Somatest, необходимое для диагностики, кг: " />

                    <TextView
                        android:id="@+id/tvKolichestvo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="8"
                        android:text="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="Стоимость обработки всего поголовья, руб: " />

                    <TextView
                        android:id="@+id/tvStoimostObrabotkiVsego"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="8"
                        android:text="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="Стоимость обработки 1 головы, руб: " />

                    <TextView
                        android:id="@+id/tvStoimostObrabotkiGolovy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="8"
                        android:text="0" />

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnRaschet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickRaschet"
                android:text="Рассчитать" />

            <Button
                android:id="@+id/btnSravnenie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickSravnenie"
                android:text="Сравнить с другим средством" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
