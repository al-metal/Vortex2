<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Fragments.KliningCalculation11Fragment">

    <ScrollView style="@style/scrollView">

        <LinearLayout style="@style/linearLayoutInputData">

            <TableLayout style="@style/tableViewInputData">

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputDataFrag"
                        android:text="Цена за весь объем в таре,руб." />

                    <EditText
                        android:id="@+id/etPricePerVolume"
                        style="@style/editTextInputDataFrag" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputDataFrag"
                        android:text="Масса средства в таре" />

                    <EditText
                        android:id="@+id/etWeightOfProductInContainer"
                        style="@style/editTextInputDataFrag" />

                </TableRow>

                <TableRow style="@style/tableRowInputData">

                    <TextView
                        style="@style/textViewInputDataFrag"
                        android:text="Вместимость воды (ванная для замачивания), л" />

                    <EditText
                        android:id="@+id/etWaterCapacity"
                        style="@style/editTextInputDataFrag" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnCalculation"
                style="@style/buttonResultFrag"
                android:text="@string/btnResult" />

            <TableLayout
                android:id="@+id/tableL"
                style="@style/tableLayoutResult">

                <TableRow style="@style/tableRowResultFirst">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Расход, мл/л (мойка)" />

                    <TextView
                        style="@style/textViewResultRightFrag"
                        android:text="3" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Расход, мл/л (замачивание)" />

                    <TextView
                        style="@style/textViewResultRightFrag"
                        android:text="5" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Расход, мл./м2" />

                    <TextView
                        style="@style/textViewResultRightFrag"
                        android:text="1" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Стоимость за 1кг. руб." />

                    <TextView
                        android:id="@+id/tvThePricePerKg"
                        style="@style/textViewResultRightFrag" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Стоимость за 1 мойку посуды (50 тарелок)" />

                    <TextView
                        android:id="@+id/tvTheCostOfWashingDishes"
                        style="@style/textViewResultRightFrag" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Стоимость 1 замачивания на ванну, руб." />

                    <TextView
                        android:id="@+id/tvTheCostOfSoaking"
                        style="@style/textViewResultRightFrag" />

                </TableRow>

                <TableRow style="@style/tableRowResultOther">

                    <TextView
                        style="@style/textViewResultLeftFrag"
                        android:text="Стоимость средства на м2, руб." />

                    <TextView
                        android:id="@+id/tvTheCostOfFunds"
                        style="@style/textViewResultRightFrag" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>