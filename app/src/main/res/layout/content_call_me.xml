<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vortex.vortex.CallMeActivity"
    tools:showIn="@layout/app_bar_call_me">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ведите номер телефона" />

        <Spinner
            android:id="@+id/spinnerCallMe"
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/colorSpiner"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/btnCallMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Отправить запрос" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
