<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:orientation="vertical"
    tools:context=".Logo">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pbLoadDB"
        android:src="@drawable/firstlogo" />

    <ProgressBar
        android:id="@+id/pbLoadDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvProgressBarText"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tvProgressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Подождите идет получение данных"
        android:textSize="10dp"
        android:visibility="invisible" />

</RelativeLayout>